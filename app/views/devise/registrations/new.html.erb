<div class="container">
    <div class="row">
        <h3 class="col-sm-offset-3 col-sm-6">Welcome to Burnonce.com</h3>
    </div
    <div class="row">
        <div class="col-sm-offset-1 col-sm-2">
        </div>
        <div class="col-sm-6">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
                <div class="row">
                      <div class="col-xs-12 col-md-12">
                          <%= f.text_field :username, class: 'form-control input-lg', placeholder: 'Username' %>
                        </div>
                </div>
                <%= f.email_field :email, autofocus: true, class: 'form-control input-lg', placeholder: 'Your valid email address. A confirmation will be sent here' %><%= f.password_field :password, autocomplete: "off", class: 'form-control input-lg', placeholder: 'Enter Password' %><%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control input-lg', placeholder: 'Confirm Password' %>
                    <br />
                <span class="help-block">You must enter a valid email address as a confirmation link will be sent to verify your account.</span>
                <%= f.submit "Create my account", class: 'btn btn-lg btn-primary btn-block signup-btn' %>
            <% end %>
        </div>
      </div>
    </div>
</div>
